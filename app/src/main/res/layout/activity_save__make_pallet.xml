<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Save_MakePalletActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

                <View
                    android:id="@+id/color_1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/drawer_bg"
                    />
                <View
                    android:id="@+id/color_2"

                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/design_default_color_primary"/>
                <View
                    android:id="@+id/color_3"
                    android:background="@color/drawer_icon_color"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                   />
                <View
                    android:id="@+id/color_4"

                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/firtpage_bg_color"
                     />
                <View
                    android:id="@+id/color_5"
        android:background="@color/cardview_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>