<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".palletmaker_firstActivity"
    android:background="#092532">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textSize="30dp"
        android:textColor="#89c9b8"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Choose one of the methods for creating pallets "/>
    <ImageView
        android:layout_weight="1.8"
        android:id="@+id/image_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/color_count"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:hint="Enter color counts"
        android:textColorHint="@color/whitetransparent"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/cardview_txt_color">

    </EditText>
    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginBottom="20dp"
        android:indeterminateDrawable="@drawable/custom_progress"
        android:indeterminateDuration="@android:integer/config_longAnimTime"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="900dp" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.2"
    android:orientation="horizontal">
    <Button
        android:id="@+id/meadian_cut"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Median cut"
        android:layout_weight="1"
        android:textColor="#092532"
        android:layout_margin="20dp"
        android:background="#89c9b8"
        android:layout_below="@id/image_one"/>

    <Button
        android:id="@+id/k_mean"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_one"
        android:layout_weight="1"
        android:textColor="#092532"
        android:background="#89c9b8"
        android:layout_margin="20dp"
        android:text="K_mean"/>
</LinearLayout>


</LinearLayout>