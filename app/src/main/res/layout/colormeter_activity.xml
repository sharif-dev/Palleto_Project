<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/firtpage_bg_color"
    tools:context=".ColormeterActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ColorMeter"
    android:textSize="40dp"
    android:textColor="#e1ffc2"
    android:gravity="center"
    android:paddingTop="12dp"/>
    <ImageView
        android:id="@+id/img_meter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:elevation="8dp"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/color_selected"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_margin="6dp"
        app:cardCornerRadius="2dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/show_rgb"
            android:layout_width="20dp"
            android:layout_height="90dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:autoText="false"
            android:text="RGB"

            android:textAlignment="center"
            android:textColor="@color/drawer_text_color"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/show_hex"
            android:layout_width="20dp"
            android:layout_height="90dp"
            android:textAlignment="center"
            android:textSize="15dp"
            android:text="HEX"
            android:textColor="@color/drawer_text_color"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/show_HSV"
            android:layout_width="20dp"
            android:layout_height="90dp"
            android:textAlignment="center"
            android:text="HSV"
            android:textSize="15dp"
            android:textColor="@color/drawer_text_color"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
    </LinearLayout>


</LinearLayout>